
<h1 class="mb-4">Main Page</h1>

<div class="row mb-4">
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header">
                Checkout form
            </div>
            <div class="card-body">

                <%= form_with id: "invoice-form", method: :get do |f| %>

                    <div class="mb-3 row">
                        <%= f.label :price, "Price:", class: "col-sm-4 col-form-label" %>
                        <div class="col-sm-8">
                            <%= f.number_field :price, min: ".00", step: ".01", class: "form-control", placeholder: "100" %>
                        </div>
                    </div>
                    <div class="mb-3 row">
                    <%= f.label :currency, "Currency:", class: "col-sm-4 col-form-label" %>
                        <div class="col-sm-8">

                        <%= f.select :currency, @currencies, {:selected => @currencies[0]}, {class: "form-select"}  %>

                        </div>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div id="checkout-widget">
    </div>
</div>